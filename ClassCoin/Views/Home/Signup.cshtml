@model ClassCoin.ViewModels.SignupViewModel
@{
    ViewBag.Title = "Sign up";
}
<div class="header py-7 py-lg-8" style="padding-top:20px !important; background:linear-gradient(87deg,#5e72e4 0,#172b4d 100%) !important">
    <div class="container">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <h1 class="text-lighter text-center" style="padding-bottom:20px;">Register here!</h1>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
    <div class="separator separator-bottom separator-skew zindex-100">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 3000 100" preserveAspectRatio="none meet" x="0" y="0" version="1.1">
            <polygon class="fill-secondary" style="stroke-width:5;stroke:#f8f9fe;" points="3000,0 3000,100 0,100" />
        </svg>
    </div>
</div>

<div class="container-fluid" style="margin-top:-8rem;">
    <div class="row">
        <div class="col"></div>
        <div class="col-4">
            <div class="nav-wrapper">
                <ul class="nav nav-pills nav-fill flex-column flex-md-row" id="tabs-icons-text" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link mb-sm-3 mb-md-0 active" id="student-signup-tab" data-toggle="tab" href="#student-signup" role="tab" aria-controls="student-signup" aria-selected="true"><i class="ni ni-hat-3 mr-2"></i>Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mb-sm-3 mb-md-0" id="instructor-signup-tab" data-toggle="tab" href="#instructor-signup" role="tab" aria-controls="instructor-signup" aria-selected="false"><i class="ni ni-badge mr-2"></i>Instructors</a>
                    </li>
                </ul>
            </div>
            <div class="card shadow bg-secondary border-0">
                <div class="card-body">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="student-signup" role="tabpanel" aria-labelledby="student-signup-tab">
                            <div class="card-header bg-transparent pb-5">
                                <div class="text-muted text-center mt-2 mb-3">
                                    <small>Students sign up with</small>
                                </div>
                                <div class="btn-wrapper text-center">
                                    <a class="btn btn-neutral btn-icon" href="#">
                                        <span class="btn-inner--icon">
                                            <img src="~/Graphics/google.svg" />
                                        </span>
                                        <span class="btn-inner--text">
                                            Google
                                        </span>
                                    </a>
                                </div>
                            </div>
                            <div class="text-muted text-center mt-2 mb-3">
                                <small>or Sign up with credentials</small>
                            </div>
                            @using (Ajax.BeginForm("StudentSignup", "Home", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "student-signup-form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Partial("StudentSignup_Partial")
                            }
                        </div>
                        <div class="tab-pane fade" id="instructor-signup" role="tabpanel" aria-labelledby="instructor-signup-tab">
                            <div class="card-header bg-transparent pb-5">
                                <div class="text-muted text-center mt-2 mb-3">
                                    <small>Instructors sign up with</small>
                                </div>
                                <div class="btn-wrapper text-center">
                                    <a class="btn btn-neutral btn-icon" href="#">
                                        <span class="btn-inner--icon">
                                            <img src="~/Graphics/google.svg" />
                                        </span>
                                        <span class="btn-inner--text">
                                            Google
                                        </span>
                                    </a>
                                </div>
                            </div>
                            <div class="text-muted text-center mt-2 mb-3">
                                <small>or Sign up with credentials</small>
                            </div>
                            @using (Ajax.BeginForm("InstructorSignup", "Home", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "instructor-signup-form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Partial("InstructorSignup_Partial")
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>
